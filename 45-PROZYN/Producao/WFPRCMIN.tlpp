  cHTML += "<p style='font-weight: bold;padding-left: 15px;'>1. <span style='background:yellow;'>O setor Comercial negocie um novo preço de venda, ou</span></p>
  cHTML += "<p style='font-weight: bold;padding-left: 15px;'>2. <span style='background:yellow;'>A Diretoria Executiva aprove o pedido como está.</span></p>"
  cHTML += "<h4>Informações do pedido:</h4>
  cHTML += "<table>
  cHTML += "	<thead>
  cHTML += "		<tr>
  cHTML += "			<td align='center'>DATA</td>
  cHTML += "      <td align='center'>COD_CLI</td>
  cHTML += "      <td align='center'>CLIENTE</td>
  cHTML += "      <td align='center'>COD PROD</td>
  cHTML += "      <td align='center'>PRODUTO</td>
  cHTML += "      <td align='center'>QUANT</td>
  cHTML += "      <td align='right'>PREÇO DE VENDA</td>
  cHTML += "      <td align='center'>PREÇO MÍNIMO</td>
  cHTML += "			<td align='center'>PREVISÃO FAT.</td>
  cHTML += "		</tr>
  cHTML += "	</thead>
