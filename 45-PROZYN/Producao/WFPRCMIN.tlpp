    cHTML += "			<td align='center'>R$ "+TRANSFORM(aCol[GDFieldPos("C6_PRCVEN")], "@E 999,999,999.99")+"</td>
    cHTML += "			<td align='center'>R$ "+TRANSFORM(DA1->DA1_XPRCMI, "@E 999,999,999.99")+"</td>
    cHTML += "			<td align='center'>"+DtoC(M->C5_FECENT)+"</td>
    cHTML += "		</tr>

  cHTML += "	</tbody>
