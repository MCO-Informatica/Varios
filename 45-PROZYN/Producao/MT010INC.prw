*/ 
Static Function CompPrdImp(cProd, cDesc)

	Local aArea		:= GetArea()
	Local aParam	:= {}

	Default cProd	:= ""
	Default cDesc	:= ""

	If SB5->(!DbSeek(xFilial("SB5") + cProd)) 
		
		If PergImpres(@aParam)
		
			Reclock("SB5",.T.)
			SB5->B5_FILIAL 	:= xFilial("SB5") 
			SB5->B5_COD		:= cProd
			SB5->B5_CEME	:= cDesc
			SB5->B5_YCODIMP	:= aParam[1]
			SB5->(MsUnLock())
		Else
			Aviso("Atenção","Necessário informar o grupo de impressão do rotulo.",{"Ok"},2)
			CompPrdImp(cProd, cDesc)
		EndIf
	EndIf

	RestArea(aArea)
Return 


