Static Function BlqProd()

	Local aArea := GetArea()

	DbSelectArea("SB1")
	DbSetOrder(1)

	If SB1->(DbSeek(xFilial("SB1") + SB1->B1_COD ))
		RecLock("SB1",.F.)
		SB1->B1_MSBLQL := '1'
		SB1->(MsUnlock())
	endif

	RestArea(aArea)
Return


