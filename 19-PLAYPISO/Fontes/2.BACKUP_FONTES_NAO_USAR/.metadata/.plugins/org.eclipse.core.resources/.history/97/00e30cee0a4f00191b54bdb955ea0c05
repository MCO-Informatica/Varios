Static Function ENVSQL()
		
Local cQuery := ""

dbUseArea(.T.,,cArqTrab,"TTC",.T.,.F.)
DbSelectArea("TTC")
DbGoTop()

cQuery := " SELECT * FROM " + RetSqlName("SC7") + " AS SC7 "
cQuery += " LEFT JOIN " + RetSqlName("SB1") + " AS SB1 ON SC7.C7_PRODUTO = SB1.B1_COD "
cQuery += " LEFT JOIN " + RetSqlName("SA2") + " AS SA2 ON SC7.C7_FORNECE = SA2.A2_COD "
cQuery += " WHERE SC7.C7_DATPRF >= GETDATE ( ) + 7 "
//cQuery += " AND SC7>D_E_L_E_T_ = '' "

Memowrite("ENVSQL.SQL",cQuery)

	DbSelectArea("TTC")
	RecLock("TTC",.T.)


	TTC->PRODUTO := (clAlias)->C7_PRODUTO
    TTC->DESCRI  := (clAlias)->B1_DESC  
    TTC->FORNECE := (clAlias)->C7_FORNECE
    TTC->DTENT   := (clAlias)->C7_DATPRF  
    TTC->DTEMI   := (clAlias)->C7_EMISSAO
    TTC->QUANT   := (clAlias)-> C7_QUANT 
    TTC->OBSERV  := (clAlias)-> C7_OBS
	
	
	DbSelectArea(clAlias)
	DbSkip()
                                                                                       	

(clAlias)->(DbCloseArea())

	EnviaEmail() 		
Return()

