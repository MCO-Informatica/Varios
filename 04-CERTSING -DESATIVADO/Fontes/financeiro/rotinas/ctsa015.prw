		   	cMsgLog := alltrim(cArquivo)+";"+AllTrim(Strzero(nRecAtu,6))+";00;Estrututa da linha difere do Layout definido"+ CRLF
			FWrite(nHandle, cMsgLog  )
			FWrite(nHandlog, cMsgLog )
		   	FT_FSKIP()
			Loop					
		EndIf
	
		cPedGar := ALLTRIM(aLin[3])
		cCrtArq := ALLTRIM(aLin[7])
		cVlrArq := ALLTRIM(aLin[9])
		cVldArq := ALLTRIM(aLin[10])
		cBanArq := ALLTRIM(aLin[6])
		cParArq := ALLTRIM(aLin[5])
		cDatArq := ALLTRIM(aLin[8])
	
		u_AtuCCPed("1",alltrim(cArquivo),cPedGar,cCrtArq,cVlrArq,cVldArq,cBanArq,cParArq,cDatArq,nHandle,nHandlog,nRecAtu,.T.,"","","","")
	Else
		cMsgLog :=  alltrim(cArquivo)+";"+AllTrim(Strzero(nRecAtu,6))+";01;Linha do arquivo em branco." + CRLF
		FWrite(nHandle, cMsgLog  )
		FWrite(nHandlog, cMsgLog )		

	EndIf
	FT_FSKIP()
Enddo

FT_FUSE()

Return(.T.)                          