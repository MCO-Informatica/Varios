Aadd( aCampos, {"QTD_PARC"		,	"C", 01, 0} ) //05
Aadd( aCampos, {"BANDEIRA"		,	"C", 15, 0} ) //06
Aadd( aCampos, {"CARTAO"		,	"C", 16, 0} ) //07
Aadd( aCampos, {"DT_VLD"		,	"C", 07, 0} ) //08
Aadd( aCampos, {"VLR"			,	"C", 08, 0} ) //09
Aadd( aCampos, {"VLD"			,	"C", 20, 0} ) //10

FT_FUSE(cArquivo)

If FT_FEOF()
	FT_FUSE()
	cMsgLog := alltrim(cArquivo)+";Arquivo invalido ou vazio" + CRLF
	FWrite(nHandle, cMsgLog )
	FWrite(nHandlog, cMsgLog )
	Return(.F.)
Endif

nTotRec := FT_FLASTREC()
BarGauge2Set( nTotRec )

FT_FGOTOP()

While !FT_FEOF()
	
	IncprocG2( "Importando Registro "+AllTrim(Str(nRecAtu++))+" de "+AllTrim(Str(nTotRec)) )
	ProcessMessage()
	
	xBuff:=alltrim(FT_FREADLN())
