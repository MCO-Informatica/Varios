User Function NtoH(nValor)

Local cInt		:= ""
Local cDec		:= ""
Local cValor	:= ""
Local cHora		:= ""

cValor	:= Alltrim(Str(nValor))
If AT(".",cValor) <> 0
	cInt	:= SubStr(cValor,1,AT(".",cValor)-1)
	cDec	:= SubStr(cValor,AT(".",cValor)+1)
	cDec	:= Alltrim(Str( Val("0."+cDec)*60 ))
	cHora	:= cInt+":"+cDec
Else
	cHora	:= cValor+":00"
Endif

Return(cHora)


