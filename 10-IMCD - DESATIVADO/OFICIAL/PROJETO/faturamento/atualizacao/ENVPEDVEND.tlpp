User Function ENVPEDVEND()

	Local aArea		:= GetArea()
	Local lRet		:= .T.
	Local cMsg    	:= "Enviar Confirmação do Pedido por email para?"
	Local nOpc    	:= 4
	Local lDispMail := .T.

	Private cMensagem :=""
	Private cTermo :=""
	Private cMailCli :=""

	dbSelectArea("SC5")
	dbSetOrder(1)
	dbSeek(xFilial("SC5")+SC5->C5_NUM,.F.)

	cAssunto := "Confirmação de Pedido de Venda- "+SC5->C5_NUM

	IF !(IsInCallStack("A415BAIXA"))

		nOpc := Aviso("Confirmação do Pedido "+SC5->C5_NUM, cMsg, {"Cliente", "Meu e-mail", "Ambos", "Cancelar"}, 2)
		if nOpc > 3
			RestArea(aArea)
			Return()
		endif

		cAssunto := "Reenvio - " + cAssunto
	endif

	PROCESSA( { || GerarHtml(@lRet)  }, "Gerando E-mail dp Pedido de Venda "+SC5->C5_NUM,PROCNAME())

	If lRet

		aAttach := {}
		
			cCC := " "

			if nOpc == 2
				cMailCli :=  alltrim(UsrRetMail(__cUserID))+";"
			elseif nOpc == 3
				cCC := alltrim(UsrRetMail(__cUserID))+";"
			EndIf

		if MsgYesNo( "Deseja enviar o Pedido via Email, para: "+ cMailCli +";"+cCC)

			lRet := U_ENVMAILIMCD(cMailCli,cCC,/*copia oculta*/"",cAssunto,cMensagem,aAttach,lDispMail)

			if lRet
				cMsg := "Email enviado para: "+cMailCli + chr(10)+chr(13)+iif(Empty(cCC),"",'Com Copia: '+cCC)
				U_GrvLogPd(SC5->C5_NUM,SC5->C5_CLIENTE,SC5->C5_LOJACLI,"Email","Email enviado com sucesso", ,cMsg)
			else
				Aviso("Falha no envio do email","Erro No servidor", {"OK"},1)
				cMsg := "Erro no email: "+cMailCli + iif(Empty(cCC),"",' ou: '+cCC)
				U_GrvLogPd(SC5->C5_NUM,SC5->C5_CLIENTE,SC5->C5_LOJACLI,"Email","Falha no envio do email")

				Aviso("Falha no envio do email","Erro No servidor", {"OK"},1)
			endif

		endif


		
	else
		cMsg1 := "Falha no envio do email"
		cMsg2 := "Favor abrir chamado informando o Numero do Pedido"
		Aviso("Email de Confirmação", cMsg1+CRLF+cMsg2 , {"OK"},1)
	endif

	RestArea(aArea)

Return( lRet )

