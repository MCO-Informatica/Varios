Static function REDESPACHO()

	Local cTransAnt := SA4->A4_COD

	aRedesp := {}

	IF SA4->(dbSeek(xFilial("SA4")+SC5->C5_REDESP))

		cDDDSA4   := iif(!empty(SA4->A4_DDD), PADL(SA4->A4_DDD, 3, "0"), "")
		nSizeTel  := len(alltrim(SA4->A4_TEL))
		cTelSA4   := iif(!empty(SA4->A4_TEL), transform(SA4->A4_TEL, iif(nSizeTel==8, "@R 9999 9999", "@R 99999 9999")), "")
		cCnpjSA4  := transform(SA4->A4_CGC, "@R 99.999.999/9999-99")
		cIeSA4    := alltrim(SA4->A4_INSEST)

		cMsg := "Transporte Seccionado  (CONSULTA 5749/2015 DE 14/09/15) Segundo trecho, "
		cMsg += "que devera ser pago pelo cliente (FOB), sera efetuado pela :"
		cEnd := alltrim(SA4->A4_END) +" - Bairro "+alltrim(SA4->A4_BAIRRO)+", "
		cEnd += alltrim(SA4->A4_MUN)+" - "+alltrim(SA4->A4_EST)+" -  CEP " +transform(SA4->A4_CEP, "@R 99999-99")

		aAdd(aRedesp,cMsg )
		aAdd(aRedesp,CAPITAL(alltrim(SA4->A4_NOME)) )
		aAdd(aRedesp,CAPITAL(cEnd))
		aAdd(aRedesp, iif(!empty(cTelSA4), "Tel "+"("+cDDDSA4+")" +cTelSA4, ""))
		aAdd(aRedesp, "CNPJ:" +cCnpjSA4 +" - I.E: " +cIeSA4)
		aAdd(aRedesp, " horario de recebimento das 08hs as 17hs")

	ENDIF

	SA4->(dbSeek(xFilial("SA4")+cTransAnt))

Return()
