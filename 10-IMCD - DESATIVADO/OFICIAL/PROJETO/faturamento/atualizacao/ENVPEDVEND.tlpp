	cMensagem += '<title>ENVPEDVEND-IMCD</title>'
	cMensagem += '  <style type="text/css"> '
	cMensagem += '	<!-- '
	cMensagem += '  table, th, td { border: 1px solid black; }'
	cMensagem += '	.Empresa { text-align: center; justify-content: center; } '
	cMensagem += '	.style1 {font-family: Segoe UI,Verdana, Arial;font-size: 12pt;} '
	cMensagem += '	.style2 {font-family: Segoe UI,Verdana, Arial;font-size: 16pt;}'
	cMensagem += '	.style2A {font-family: Segoe UI,Verdana, Arial;font-size: 16pt; color: navy}'
