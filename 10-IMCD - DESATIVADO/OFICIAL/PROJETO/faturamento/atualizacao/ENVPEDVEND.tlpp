Static Function htCabec()

	Local _cNome  := ""
	Local _cCgc   := ""
	Local _cTel   := ""
	Local _cEmpEnt := ""
	Local _cEEnt  := ""
	Local _cCepe  := ""
	Local _cBaie  := ""
	Local _cCide  := ""
	Local _cEste  := ""

	Local cPedCli := ""
	Local cLogo := GETMV("MV_ENDLOGO")
	Local nX := 0

	Private aRedesp := {}
	Private cNomVen := ""
	Private cTelVend := space( len( SA3->A3_TEL ) )
	Private cEmailVend := space( len( SA3->A3_EMAIL ) )
	Private cVenInt := ""
	Private cTelInt := ""
	Private cEmaInt := ""

	if SC6->( dbSeek( xFilial( "SC6" ) + SC5->C5_NUM ) )

		cPedCli := SC6->C6_NUMPCOM
	endif

	SA1->(dbSetOrder(1))
	SA1->( dbSeek( xFilial( "SA1" ) + SC5->C5_CLIENTE + SC5->C5_LOJACLI ) )

	_cNome := SA1->A1_NOME
	_cCgc  := SA1->A1_CGC
	_cTel  := "("+SA1->A1_DDD+") "+SA1->A1_TEL

	_cEndCli := Capital(ALLTRIM(IIF(EMPTY(SA1->A1_ENDENT),SA1->A1_END,SA1->A1_ENDENT)))
	_cBaiCli := Capital(ALLTRIM(IIF(EMPTY(SA1->A1_BAIRROE),SA1->A1_BAIRRO,SA1->A1_BAIRROE)))
	_cCidCli := Capital(ALLTRIM(IIF(EMPTY(SA1->A1_MUNE),SA1->A1_MUN,SA1->A1_MUNE)))
	_cEstCli := Capital(ALLTRIM(IIF(EMPTY(SA1->A1_ESTE),SA1->A1_EST,SA1->A1_ESTE)))
	_cCepCli := TRANSFORM(ALLTRIM(IIF(EMPTY(SA1->A1_CEPE),SA1->A1_CEP,SA1->A1_CEPE)), "@R 99999-99")

	cMailCli := Lower(ALLTRIM(IIF(!EMPTY(SC5->C5_XMAILCO),C5_XMAILCO,SA1->A1_EMAIL )))
	cVend := iif (empty(SC5->C5_VEND1),SA1->A1_VEND,SC5->C5_VEND1)
	cVendI := SA1->A1_VENDINT

	If !Empty(SC5->C5_CENT) .and. SC5->C5_CENT + SC5->C5_LENT <> SC5->C5_CLIENTE + SC5->C5_LOJACLI

		SA1->(dbSeek(xFilial("SA1") + SC5->C5_CENT + SC5->C5_LENT))
		_cEmpEnt := Capital("( " + ALLTRIM( SA1->A1_NOME ) + ") ")
		_cEEnt := Capital(SA1->A1_END)
		_cBaie := Capital(SA1->A1_BAIRRO)
		_cCide := Capital(SA1->A1_MUN)
		_cEste := Capital(SA1->A1_EST)
		_cCepe := TRANSFORM(SA1->A1_CEP, "@R 99999-99")

	Else
		_cEmpEnt :=  Capital(ALLTRIM( SA1->A1_NOME ) )
		_cEEnt := _cEndCli
		_cCepe := _cCepCli
		_cBaie := _cBaiCli
		_cCide := _cCidCli
		_cEste := _cEstCli

	Endif

	if SA3->( dbSeek( xFilial("SA3") +  cVend) )
		cNomVen := CAPITAL(ALLTRIM(SA3->A3_NOME))
		cTelVend := "("+Alltrim(SA3->A3_DDDTEL)+")" + transf( alltrim( SA3->A3_TEL ), "@R !!!!-!!!!!!!!!!!!!!!" )
		cEmailVend := LOWER(alltrim( SA3->A3_EMAIL ))
	endif

	if SA3->( dbSeek( xFilial("SA3") + cVendI) )
		cVenInt := CAPITAL(ALLTRIM(SA3->A3_NOME))
		cTelInt := "("+Alltrim(SA3->A3_DDDTEL)+")" + transf( alltrim( SA3->A3_TEL ), "@R !!!!-!!!!!!!!!!!!!!!" )
		cEmaInt := LOWER(alltrim( SA3->A3_EMAIL ))
	endif

	SE4->( dbSeek( xFilial( "SE4" ) + SC5->C5_CONDPAG ) )
	SA4->( dbSeek( xFilial( "SA4" ) + SC5->C5_TRANSP ) )


	cMensagem += '<div class="empresa" >'
	cMensagem += '<img alt="IMCD LOGO" class="img__src img__cover" src="'+cLogo+'" width="658" height="191"><br/><br/>'
	cMensagem += '<p class="style2A" style="text-align:center" >Confirmação de Pedido</p>'
	cMensagem += '<p class="style2A" style="text-align:center" >Número '+SC5->C5_NUM +'</p>'
	cMensagem += '<p class="style2A" style="text-align:center">Data de Emissão: ' + dtoc( SC5->C5_EMISSAO ) + '</p>'
	cMensagem += '</div> '

	cMensagem += '<hr />'

	cMensagem += '<div class="empresa">'
	cMensagem += '<p class="style3A">'+Capital(ALLTRIM(SM0->M0_NOMECOM))+'</p>'

	cEnd := Capital( ALLTRIM(SM0->M0_ENDENT)+iif(EMPTY(SM0->M0_COMPENT),"" ,' - '+ALLTRIM(SM0->M0_COMPENT)))
	cEnd += Capital(' - '+ALLTRIM(SM0->M0_BAIRENT)+' - '+ALLTRIM(SM0->M0_CIDENT)+' - '+ALLTRIM(SM0->M0_ESTENT))

	cMensagem += '<p class="style2">'+cEnd+' - CEP: '+ALLTRIM(SM0->M0_CEPENT)+'</p>'
	cMensagem += '<p class="style1">Fone: '+ALLTRIM(SM0->M0_TEL)
	cMensagem += ' – e-mail <a href="mailto:imcdbrasil@imcdbrasil.com.br">imcdbrasil@imcdbrasil.com.br</a>'
	cMensagem += ' – internet: <a href="http://www.imcdgroup.com">www.imcdgroup.com</a></p> '
	cMensagem += '</div> '

	cMensagem += '<hr />'

	cMensagem += '<div> '

	//cMensagem += '<p class="style1">Nr. Pedido Cliente: '+Alltrim(cPedCli)+'</p>'

	cMensagem += '<p class="style1">Cliente: ' + _cNome +'CNPJ: '+ _cCgc+'</p> '
	cMensagem += '<p class="style1">Contato: '+CAPITAL(SC5->C5_XNOMCON)+ ' - Telefone:'+_cTel+'</p>'
	cMensagem += '<p class="style1">' +_cEndCli+ ' CEP: '+_cCepCli+'</p>'
	cMensagem += '<p class="style1">Bairro: '+_cBaiCli+' - Município: '+_cCidCli+' - UF : ' + _cEstCli + '</p>'

	cMensagem += '</div>'
	cMensagem += '<hr />
	cMensagem += '<div>'

	cMensagem += '<p class="style1">Vendedor: ' + cNomVen  +'</p>'
	cMensagem += '<p class="style1">Vendedor Interno: '+cVenInt+'</p>'
	cMensagem += '</div>'
	cMensagem += '<hr />
	cMensagem += '<div>'
	cMensagem += '<p class="style1">Transportadora: '+SA4->A4_NOME +' -  Frete: '+iif(SC5->C5_TPFRETE="C","CIF","FOB")+'</p>'

	IF SC5->C5_XTRASEC == 'S' .and. !empty(SC5->C5_REDESP)

		REDESPACHO()

		For nX := 1 To Len(aRedesp)
			cMensagem += '<p class="style1">'+aRedesp[nX]+'</p>'
		Next nX

	ENDIF

	cMensagem += '</div>'

	cMensagem += '<hr />
	cMensagem += '<div>'

	cMensagem += '<p class="style1">Local de Entrega: </p>'

	if Len(aRedesp) > 0

		cMensagem += '<p class="style1">'+aRedesp[2]+'</p>'
		cMensagem += '<p class="style1">'+aRedesp[3]+'</p>'

	Else
		cEnd := _cEEnt +" - Bairro "+_cBaie+", "
		cEnd += _cCide+" - "+_cEste+" -  CEP " +transform(_cCepe, "@R 99999-99")

		cMensagem += '<p class="style1">'+_cEmpEnt+'</p>'
		cMensagem += '<p class="style1">'+cEnd+'</p>'

	Endif

	cMensagem += '</div>'
	cMensagem += '<hr />
	cMensagem += '<div>'

	lRet := htItens()

	cMensagem += '</div>'

	if lRet
		htInforma()
	endif

Return lRet
/*
Itens do Pedido
*/
Static Function htItens( )
	Local _nIpi := 0
	Local _nQtd := 0
	Local _nPrc := 0
	Local lRet := .F.
	Local aSX513  := {}
	Local cDesCfo := ""
	Local cCfop   := ""

	dbSelectArea("SC6")
	dbSetOrder(1)
	MsSeek(xFilial("SC6")+SC5->C5_NUM)

	cCfop := SC6->C6_CF

	aSX513 := FWGetSX5("13",cCfop)

	if !Empty(aSX513)
		cDesCfo := aSX513[1][4]
	endif

	cMensagem += '<p class="style1">Prazo de Pagamento: '+SE4->E4_DESCRI+'</p>'
	cMensagem += '<p class="style1">CFOP: '+cCfop+' '+cDesCfo +'</p> '

	cMensagem += '<div>'
	cMensagem += '<table style="width:100%">'
	cMensagem += '<tr>'
	cMensagem += '<th>ITEM</th>'
	cMensagem += '<th>PRODUTO</th>'
	cMensagem += '<th>QUANTIDADE/UN</th>'
	cMensagem += '<th>MOEDA</th>'
	cMensagem += '<th>Pre&ccedil;o Unit&aacute;rio NET</th>'
	cMensagem += '<th>IPI</th>'
	cMensagem += '<th>Data Prev. Entrega</th>'
	cMensagem += '<th>Num Ped Cliente</th>'
	cMensagem += '<th>Item Ped Cliente</th>'
	cMensagem += '</tr>'

	Do While .not. SC6->( eof() ) .and.  ;
			SC6->C6_FILIAL == xFilial( "SC6" ) .and.;
			SC6->C6_NUM == SC5->C5_NUM

		_nIpi := 0

		SB1->( dbSeek( xFilial( "SB1" ) + SC6->C6_PRODUTO ) )

		if SF4->( dbSeek( xFilial( "SF4" ) + SC6->C6_TES ) ) .and. SF4->F4_IPI == "S"
			_nIpi := SB1->B1_IPI
		endif

		_nQtd := SC6->C6_QTDVEN

		if SC6->C6_XMOEDA == 1

			_nPrc := IIF(SC6->C6_XVLRINF > 0,SC6->C6_XVLRINF,SC6->C6_XPRUNIT)  //SC6->C6_PRCVEN

		else
			//---------------------------------------------
			//Alterado em 16/01/18 por Marcos Andrade
			//Substituir o campo C6_XPRCMOE por C6_XPRUNIT
			//---------------------------------------------
			//_nPrc := SC6->C6_XPRCMOE
			_nPrc := IIF(SC6->C6_XVLRINF > 0,SC6->C6_XVLRINF,SC6->C6_XPRUNIT)

		endif

		cMensagem += '<tr>'
		cMensagem += '<td style="text-align:center">'
		cMensagem += '<p>'+SC6->C6_PRODUTO+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:left">'
		cMensagem += '<p>'+ALLTRIM(SB1->B1_DESC)+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+TRANSF( _nQtd,"@E 999,999,999.99" )+' '+SC6->C6_UM+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:center">'
		cMensagem += '<p>'+VERMOEDA( SC6->C6_XMOEDA )+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+TRANSF( ROUND(_nPrc,4),"@E 999,999,999.9999" )+' '+SC6->C6_UM+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+TRANSF( _nIpi,"@E 99.99" )+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+DTOC( SC6->C6_ENTREG)+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+ALLTRIM( SC6->C6_NUMPCOM )+'</p>'
		cMensagem += '</td>'
		cMensagem += '<td style="text-align:right">'
		cMensagem += '<p>'+ALLTRIM( SC6->C6_ITEMPC )+'</p>'
		cMensagem += '</td>'

		cMensagem += '</tr>'

		SC6->( dbSkip() )

		lRet := .T.

	EndDo

	cMensagem += '</div>'
	cMensagem += '</tbody>'
	cMensagem += '</table>'
	cMensagem += '<p></p>'

Return( lRet )

