Static Function htTermo( )

	Local cLocal := ' '
	Local cEstado := ALLTRIM(SM0->M0_ESTENT)
	Local aSX512 := FWGetSX5("12", cEstado )

	if !Empty(aSX512)
		cEstado := Capital(aSX512[1][4])
	endif

	cLocal := 'IMCD: '+Capital(ALLTRIM(SM0->M0_NOMECOM))+', '
	cLocal += 'estabelecida na cidade de '+capital(ALLTRIM(SM0->M0_CIDENT))+', estado de '+cEstado+", à "
	cLocal += Capital( ALLTRIM(SM0->M0_ENDENT)+iif(EMPTY(SM0->M0_COMPENT),"" ,' - '+ALLTRIM(SM0->M0_COMPENT)))
	cLocal += Capital( ' - '+ALLTRIM(SM0->M0_BAIRENT)) + ', CEP: '+ALLTRIM(SM0->M0_CEPENT)

